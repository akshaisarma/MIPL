job pop(T, D, N) {
#	T = D.
	I = 0.

	if (N % 2 == 0) {
		while (I < N) {
			T -= D.
			I += 1.
		}
	}
	else {
		while (I < N) {
			T += D.
			I += 1.
		}
	}

	@T.
}

