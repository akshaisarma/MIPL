job classify(A, M, C1, C2) {
    B = A - urow(M).

    B = B/abs(B).

    B1 = B * C1.
    B2 = B * C2.
    R = (B1 - 1)/2 + (B1 + 1)/2 * B2

    @R.
}

c1(1).
c1(0).
c2(0).
c2(1).

