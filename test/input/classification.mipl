job classify(A, M, Ca, Cb) {
    B = A - urow(M).

    B = B./abs(B).

    Ba = B * Ca.
    Bb = B * Cb.
    R = (Ba - 1)/2 + (Bb + 1)/2 * Bb.

    @R.
}

