job classify(A, M) {
    B = A - urow(M).

    T = B = B/abs(B).

    B1 = vsplit(B, 0).
    B2 = vsplit(B, 1).
    R = (B1 - 1)/2 + (B1 + 1)/2 * B2

    @R.
}

# Temp, Rain(1 = Rain, 0 = No Rain)
